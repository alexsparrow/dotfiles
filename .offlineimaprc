# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# suit to get started fast.

[general]
accounts = Mail

[Account Mail]
localrepository = Local
remoterepository = Remote
autorefresh = 5
quick = 20
postsynchook = notmuch new

[Repository Local]
type = Maildir
localfolders = ~/Mail

[Repository Remote]
type = IMAP
remotehost = alspar2.tilaa.org
remoteuser = alex
ssl = yes
